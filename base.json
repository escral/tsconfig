{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "@escral/tsconfig/base",
    "compilerOptions": {
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "declaration": false,
        "allowJs": false,
        "checkJs": false
    }
}
